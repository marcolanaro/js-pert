{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": false,
    "lib": ["es2017", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "types"]
}
